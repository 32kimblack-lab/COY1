{
	"info": {
		"_postman_id": "coy-backend-collection",
		"name": "COY Backend API",
		"description": "Complete API collection for COY backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Test Root Endpoint",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "https://backend-delta-two-66.vercel.app/api",
					"protocol": "https",
					"host": [
						"backend-delta-two-66",
						"vercel",
						"app"
					],
					"path": [
						"api"
					]
				},
				"description": "Test if backend is running. No authentication needed."
			}
		},
		{
			"name": "2. Get User Data",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{firebase_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://backend-delta-two-66.vercel.app/api/users/{{user_id}}",
					"protocol": "https",
					"host": [
						"backend-delta-two-66",
						"vercel",
						"app"
					],
					"path": [
						"api",
						"users",
						"{{user_id}}"
					]
				},
				"description": "Get user profile data. Requires Firebase token."
			}
		},
		{
			"name": "3. Get User Collections",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{firebase_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://backend-delta-two-66.vercel.app/api/users/{{user_id}}/collections",
					"protocol": "https",
					"host": [
						"backend-delta-two-66",
						"vercel",
						"app"
					],
					"path": [
						"api",
						"users",
						"{{user_id}}",
						"collections"
					]
				},
				"description": "Get all collections for a user."
			}
		},
		{
			"name": "4. Get Visible Collections",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{firebase_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://backend-delta-two-66.vercel.app/api/collections/visible",
					"protocol": "https",
					"host": [
						"backend-delta-two-66",
						"vercel",
						"app"
					],
					"path": [
						"api",
						"collections",
						"visible"
					]
				},
				"description": "Get all visible collections (for feeds)."
			}
		},
		{
			"name": "5. Get Specific Collection",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{firebase_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "https://backend-delta-two-66.vercel.app/api/collections/{{collection_id}}",
					"protocol": "https",
					"host": [
						"backend-delta-two-66",
						"vercel",
						"app"
					],
					"path": [
						"api",
						"collections",
						"{{collection_id}}"
					]
				},
				"description": "Get a specific collection by ID."
			}
		},
		{
			"name": "6. Create Collection",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{firebase_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "name",
							"value": "Test Collection",
							"type": "text"
						},
						{
							"key": "description",
							"value": "This is a test collection",
							"type": "text"
						},
						{
							"key": "type",
							"value": "Individual",
							"type": "text"
						},
						{
							"key": "isPublic",
							"value": "true",
							"type": "text"
						},
						{
							"key": "ownerId",
							"value": "{{user_id}}",
							"type": "text"
						},
						{
							"key": "ownerName",
							"value": "Your Name",
							"type": "text"
						},
						{
							"key": "image",
							"type": "file",
							"src": []
						}
					]
				},
				"url": {
					"raw": "https://backend-delta-two-66.vercel.app/api/collections",
					"protocol": "https",
					"host": [
						"backend-delta-two-66",
						"vercel",
						"app"
					],
					"path": [
						"api",
						"collections"
					]
				},
				"description": "Create a new collection. Image is optional."
			}
		},
		{
			"name": "7. Update User Preferences",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{firebase_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"collectionSortPreference\": \"Newest to Oldest\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://backend-delta-two-66.vercel.app/api/users/{{user_id}}",
					"protocol": "https",
					"host": [
						"backend-delta-two-66",
						"vercel",
						"app"
					],
					"path": [
						"api",
						"users",
						"{{user_id}}"
					]
				},
				"description": "Update user preferences like collection sort order."
			}
		}
	],
	"variable": [
		{
			"key": "firebase_token",
			"value": "YOUR_FIREBASE_TOKEN_HERE",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "YOUR_USER_ID_HERE",
			"type": "string"
		},
		{
			"key": "collection_id",
			"value": "YOUR_COLLECTION_ID_HERE",
			"type": "string"
		}
	]
}

